<h2>New Film</h2>
<form class="new-film" action="/films" method="post">
  <!-- you can only send get or post -->
  <!-- input type: text -->
  <!-- so it knows to check any of the jazz under the name method -->
  <!-- <input type="hidden" name="_method" value="delete"> -->
  <div>
    <label for="film-title">Title: </label>
    <input type="text" id="film-title" name="title" placeholder="eg. Dr Phd.">
  </div>
  <!-- input types: date / time / email / tel / url / color / range / number / search -->

  <!-- input radio / checkbox -->
  <div>
    <fieldset>
      <legend>Rating</legend>
      <label>
        1 star
        <input id="rating-1" type="radio" name="rating" value="1">
      </label>
      <label>
        2 stars
        <input type="radio" name="rating" value="2">
      </label>
      <label>
        3 stars
        <input type="radio" name="rating" value="3">
      </label>
    </fieldset>
  </div>

  <div>
    <!-- input checkbox -->
    <fieldset>
      <legend>Genre</legend>
      <label>
        Drama
        <input type="checkbox" name="genre[]" value="Drama">
      </label>
      <label>
        Comedy
        <input type="checkbox" name="genre[]" value="Comedy">
      </label>
      <label>
        Documentary
        <input type="checkbox" name="genre[]" value="Documentary">
      </label>
      <label>
        Anumated
        <input type="checkbox" name="genre[]" value="Animated">
      </label>
    </fieldset>

  </div>

  <!-- textarea -->
<div>
    <label for="film-description">Description</label>
    <textarea name="description" id="film-description"></textarea>
</div>

<div>
  <!-- select / option -->
  <label for="film-country">Country</label>
  <select id="film-country" name="country">
    <!-- for and id belong together. So the label for is looking for the id -->
    <option value="">Please select a country</option>
    <option value="CA">Canada</option>
    <option value="UK">United Kingdom</option>
    <option value="JP">Japan</option>
    <!-- so you pass the value to the server and display the text btwn the options -->
  </select>

</div>


<div>
  <!-- file -->
  <!-- <input type="file" name="name"> -->
</div>

<div>
  <!-- hidden -->
  <!-- <input type="hidden" name="loyalty-points-code" value=""> -->
  <!-- just because its hidden, it doesnt mean noone can see it -->
</div>
<div>
  <!-- input submit / button -->
  <!-- <input type="submit" name="submit" value="GOOO!">   -->

  <button type="submit">
    <img src="https://placebear.com/200/300" alt="bear">
    Gooo
  </button>
</div>


</form>
